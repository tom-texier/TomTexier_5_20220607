{% extends "base.html.twig" %}

{% block title %}Contactez-moi{% endblock %}

{% block body %}
    <section class="contactForm">
        <div class="container">
            <h1>Contactez-moi</h1>

            {% if error_message %}
                <div class="notice notice__error">
                    {{ error_message }}
                </div>
            {% endif %}

            {% if success_message %}
                <div class="notice notice__success">
                    {{ success_message }}
                </div>
            {% endif %}

            <form method="post" action="/contact/send" class="form-action">
                <div class="form-content">
                    <div class="form-group w-50">
                        <label for="lastname">Votre nom<span class="required">*</span></label>
                        <input type="text" name="lastname" id="lastname" required>
                    </div>
                    <div class="form-group w-50">
                        <label for="firstname">Votre pr√©nom<span class="required">*</span></label>
                        <input type="text" name="firstname" id="firstname" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Votre e-mail<span class="required">*</span></label>
                        <input type="email" name="email" id="email" required>
                    </div>
                    <div class="form-group form-group__content">
                        <label for="message">Votre message<span class="required">*</span></label>
                        <textarea id="message" name="message" required></textarea>
                    </div>
                    <div class="form-group form-group__hp">
                        <label for="country">VEUILLEZ LAISSER CE CHAMP VIDE</label>
                        <input type="text" name="country" id="country" value="" tabindex="-1" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Envoyer mon message" class="submit" name="submit">
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
