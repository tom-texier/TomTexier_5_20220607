{% extends "admin/base.html.twig" %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block container %}
    <h1>Ajouter un utilisateur</h1>

    {% if error_message %}
        <div class="notice notice__error">
            {{ error_message }}
        </div>
    {% endif %}

    <form method="post" action="/admin/addUser" class="form-action">
        <div class="form-content">
            <div class="form-group form-group__text">
                <label for="username">Nom d'utilisateur<span class="required">*</span></label>
                <input type="text" name="username" id="username" required>
            </div>
            <div class="form-group form-group__text">
                <label for="email">Email<span class="required">*</span></label>
                <input type="email" name="email" id="email" required>
            </div>
            <div class="form-group form-group__text">
                <label for="password">Mot de passe<span class="required">*</span></label>
                <input type="password" name="password" id="password" required>
            </div>
            <div class="form-group form-group__text">
                <label for="confirm_password">Confirmer le mot de passe<span class="required">*</span></label>
                <input type="password" name="confirm_password" id="confirm_password" required>
            </div>
            <div class="form-group form-group__select">
                <label for="role">Rôle<span class="required">*</span></label>
                <select name="role" id="role" required>
                    <option selected disabled value="">Choisir un rôle</option>
                    <option value="1">Membre</option>
                    <option value="2">Administrateur</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="submit" name="submit">
            </div>
        </div>
    </form>
{% endblock %}