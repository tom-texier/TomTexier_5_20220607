{% extends "admin/base.html.twig" %}

{% block title %}Ajouter un article{% endblock %}

{% block container %}
    <h1>Ajouter un article</h1>

    {% if error_message %}
        <div class="notice notice__error">
            {{ error_message }}
        </div>
    {% endif %}

    <form method="post" action="{{ base_url }}admin/addPost" class="form-action" enctype="multipart/form-data">
        <div class="form-content">
            <div class="form-group form-group__title">
                <label for="title">Titre<span class="required">*</span></label>
                <input type="text" name="title" id="title" required>
            </div>
            <div class="form-group form-group__image">
                <div class="image-upload-preview"><img src="" alt=""></div>
                <div class="label">
                    <label for="image"><i class="fas fa-upload"></i> SÃ©lectionner une image<span class="required">*</span></label>
                    <span class="name-preview"></span>
                </div>
                <input type="file" name="image" id="image" required>
            </div>
            <div class="form-group form-group__content">
                <label for="content">Contenu<span class="required">*</span></label>
                <textarea id="content" name="content" required></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="submit" name="submit">
            </div>
        </div>
    </form>
{% endblock %}
