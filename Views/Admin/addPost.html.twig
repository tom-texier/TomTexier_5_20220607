{% extends "admin/base.html.twig" %}

{% block container %}
    <h1>Ajouter un article</h1>

    <form method="post" action="/admin/addPost" class="form-action">
        <div class="form-group form-group__title">
            <label for="title">Titre</label>
            <input type="text" name="title" id="title">
        </div>
        <div class="form-group form-group__image">
            <label for="image"><i class="fas fa-upload"></i> Importer une image</label>
            <input type="file" name="image" id="image">
        </div>
        <div class="form-group form-group__content">
            <label for="content">Contenu</label>
            <textarea id="content" name="content"></textarea>
        </div>
        <input type="submit" value="Ajouter" class="submit">
    </form>
{% endblock %}