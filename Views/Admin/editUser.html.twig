{% extends "admin/base.html.twig" %}

{% block container %}
    <h1>Modifier l'utilisateur</h1>

    {% if error_message %}
    <div class="notice notice__error">
        {{ error_message }}
    </div>
    {% endif %}
    {% if success_message %}
    <div class="notice notice__success">
        {{ success_message }}
    </div>
    {% endif %}

    <form method="post" action="/admin/editUser/{{ user.id }}" class="form-action" enctype="multipart/form-data">
        <div class="form-group form-group__text">
            <label for="username">Nom d'utilisateur<span class="required">*</span></label>
            <input type="text" name="username" id="username" value="{{ user.username }}" required>
        </div>
        <div class="form-group form-group__text">
            <label for="email">Email<span class="required">*</span></label>
            <input type="email" name="email" id="email" value="{{ user.email }}" required>
        </div>
        <div class="form-group form-group__text">
            <label for="password">Nouveau mot de passe</label>
            <input type="password" name="password" id="password">
        </div>
        <div class="form-group form-group__text">
            <label for="confirm_password">Confirmer le nouveau mot de passe</label>
            <input type="password" name="confirm_password" id="confirm_password">
        </div>
        {% if user.id != session.userID %}
            <div class="form-group form-group__select">
                <label for="role">Rôle<span class="required">*</span></label>
                <select name="role" id="role" required>
                    <option selected disabled value="">Choisir un rôle</option>
                    <option value="1" {{ user.role == 1 ? 'selected' : '' }}>Membre</option>
                    <option value="2" {{ user.role == 2 ? 'selected' : '' }}>Administrateur</option>
                </select>
            </div>
        {% endif %}
        <input type="submit" value="Mettre à jour" class="submit" name="submit">
    </form>
{% endblock %}